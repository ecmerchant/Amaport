<div class="container">
  <div class="page-header" id="banner">
    <div class="row my-4">
      <div class="col-12">
      <h2>ツールの各種設定</h2>
      </div>
      <div class="col-6">
        <hr class="my-4">
        <h4>MWSアカウントの設定</h4>
        <%= form_for(@account, {url: products_prepare_path, method: 'post'}) do |f| %>
          <div class="form-group">
            <%= f.label :seller_id, "セラーID" %>
            <%= f.text_field :seller_id, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :aws_access_key_id, "AWSアクセスキー" %>
            <%= f.text_field :aws_access_key_id, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :secret_key, "秘密キー" %>
            <%= f.text_field :secret_key, class: 'form-control' %>
          </div>
          <%= f.submit "設定する", {id: "setup_btn", class: 'btn btn-primary'} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
